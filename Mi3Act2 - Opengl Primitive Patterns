// Mi3Act2 - Opengl Primitive Patterns 

#include <GL\glut.h>

void display();
void reshape(int,int);
void init()
{
	glClearColor(0.0,0.0,0.0,1.0);
}
int main(int argc,char**argv)
{
	glutInit(&argc,argv);
	glutInitDisplayMode(GLUT_RGB);
	glutInitWindowPosition(200,100);
	glutInitWindowSize(400,400);
	glutCreateWindow("WINDOWS");
	glutDisplayFunc(display);
	glutReshapeFunc(reshape);
	init();

	glutMainLoop();

}
void display()
{
	glClear(GL_COLOR_BUFFER_BIT);
	glLoadIdentity();



	//draw
	glBegin(GL_QUADS );

	glVertex2f(-8.0,-2.0);
	glVertex2f(-8.0,-4.0);
	glVertex2f(-6.0,-4.0);
	glVertex2f(-6.0,-2.0);

	//square 2
	glVertex2f(-6.0,0.0);
	glVertex2f(-6.0,-2.0);
	glVertex2f(-4.0,-2.0);
	glVertex2f(-4.0,0.0);

	//sq 3
	glVertex2f(-4.0,-2.0);
	glVertex2f(-4.0,-4.0);
	glVertex2f(-2.0,-4.0);
	glVertex2f(-2.0,-2.0);

	//sq 4
	glVertex2f(-2.0,0.0);
	glVertex2f(-2.0,-2.0);
	glVertex2f(0.0,0.-2);
	glVertex2f(0.0,0.0);

	//sq 5
	glVertex2f(-8.0,2.0);
	glVertex2f(-8.0,0.0);
	glVertex2f(-6.0,0.0);
	glVertex2f(-6.0,2.0);

	//sq6
	glVertex2f(-4.0,2.0);
	glVertex2f(-4.0,0.0);
	glVertex2f(-2.0,0.0);
	glVertex2f(-2.0,2.0);

	//sq 7
	glVertex2f(-6.0,4.0);
	glVertex2f(-6.0,2.0);
	glVertex2f(-4.0,2.0);
	glVertex2f(-4.0,4.0);
	
	//sq7
	glVertex2f(-8.0,6.0);
	glVertex2f(-8.0,4.0);
	glVertex2f(-6.0,4.0);
	glVertex2f(-6.0,6.0);
	
	//sq8
	glVertex2f(-4.0,6.0);
	glVertex2f(-4.0,4.0);
	glVertex2f(-2.0,4.0);
	glVertex2f(-2.0,6.0);

	//sq 9
	glVertex2f(-2.0,4.0);
	glVertex2f(-2.0,2.0);
	glVertex2f(0.0,2.0);
	glVertex2f(0.0,4.0);
	
	//sq10
	glVertex2f(0.0,6.0);
	glVertex2f(0.0,4.0);
	glVertex2f(2.0,4.0);
	glVertex2f(2.0,6.0);

	//sq11
	glVertex2f(0.0,2.0);
	glVertex2f(0.0,0.0);
	glVertex2f(2.0,0.0);
	glVertex2f(2.0,2.0);

	//sq12
	glVertex2f(0.0,-2.0);
	glVertex2f(0.,-4.0);
	glVertex2f(2.0,-4.0);
	glVertex2f(2.0,-2.0);
	
	
	
	
	
	glEnd();
	
	glFlush();


}
void reshape(int w,int h)
{
	glViewport(0,0,(GLsizei)w,(GLsizei)h);
	glMatrixMode(GL_PROJECTION);
	glLoadIdentity();
	gluOrtho2D(-9,9,-9,9);
	glMatrixMode(GL_MODELVIEW);
}
